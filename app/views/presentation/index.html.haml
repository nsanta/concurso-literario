- model_class = Presentation
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:user_id)
      %th= model_class.human_attribute_name(:asset)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @presentations.each do |presentation|
      %tr
        %td= link_to presentation.id, presentation_path(presentation)
        %td= presentation.user_id
        %td= presentation.asset
        %td=l presentation.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_presentation_path(presentation), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), presentation_path(presentation), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_presentation_path, :class => 'btn btn-primary'

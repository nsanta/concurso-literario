- model_class = Presentation
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @presentation.user_id
%p
  %strong= model_class.human_attribute_name(:asset) + ':'
  %br
  = @presentation.asset

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), presentation_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_presentation_path(@presentation), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), presentation_path(@presentation), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'

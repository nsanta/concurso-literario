- model_class = User
.page-header
  %h1= "Usuario: #{@user.full_name}"

%p
  %strong= model_class.human_attribute_name(:email) + ':'
  %br
  = @user.email
%p
  %strong= model_class.human_attribute_name(:role) + ':'
  %br
  = @user.role
%p
  %strong= model_class.human_attribute_name(:first_name) + ':'
  %br
  = @user.first_name
%p
  %strong= model_class.human_attribute_name(:last_name) + ':'
  %br
  = @user.last_name
%p
  %strong= model_class.human_attribute_name(:school) + ':'
  %br
  = @user.school
%p
  %strong= model_class.human_attribute_name(:born) + ':'
  %br
  = @user.born
%p
  %strong= model_class.human_attribute_name(:address) + ':'
  %br
  = @user.address
%p
  %strong= model_class.human_attribute_name(:phone) + ':'
  %br
  = @user.phone

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), admin_users_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_user_path(@user), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_user_path(@user), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'

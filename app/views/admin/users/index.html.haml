.page-header
  %h1 Usuarios
= link_to "Nuevo", new_admin_user_path, :class => 'btn btn-primary'
%table.table.table-striped
  %thead
    %tr
      %th Nombre
      %th Rol
      %th Nombre
      %th Appelido
      %th Opciones
  %tbody
    - @users.each do |user|
      %tr
        %td= link_to user.email, admin_user_path(user)
        %td= user.role
        %td= user.first_name
        %td= user.last_name
        %td
          = link_to "Editar", edit_admin_user_path(user), :class => 'btn btn-mini'
          = link_to "Borrar", admin_user_path(user), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

= link_to "Nuevo", new_admin_user_path, :class => 'btn btn-primary'

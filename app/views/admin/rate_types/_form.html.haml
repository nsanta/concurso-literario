= form_for [:admin,@course, @rate_type], :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :title, "Nombre", :class => 'control-label '
    .controls
      = f.text_field :title, :class => 'text_field'
  .form-actions
    = f.submit "Crear", :class => 'btn btn-primary'
    = link_to "Cancelar", admin_course_rate_types_path(@course), :class => 'btn'

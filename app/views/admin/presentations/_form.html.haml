= form_for [:admin,@course], :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :title, 'Nombre', :class => 'control-label '
    .controls
      = f.text_field :title, :class => 'text_field input-xlarge'
  .control-group
    = f.label :description, 'Descripcion', :class => 'control-label'
    .controls
      = f.text_area :description, :class => 'text_area input-xlarge'
  .control-group
    = f.label :rules, 'Reglas', :class => 'control-label'
    .controls
      = f.text_area :rules, :class => 'text_area input-xlarge'
  .control-group
    = f.label :asset, "Imagen", :class => 'control-label'
    .controls
      = f.file_field :asset, :class => 'text_area input-xlarge'
  .control-group
    = f.label :starts_at, 'Empieza En', :class => 'control-label'
    .controls
      = f.date_select :starts_at, :class => 'datetime_select input-xlarge'
  .control-group
    = f.label :ends_at, "Termina En", :class => 'control-label'
    .controls
      = f.date_select :ends_at, :class => 'datetime_select input-xlarge'
  .form-actions
    = f.submit "Crear", :class => 'btn btn-primary'
    = link_to "Cancelar", admin_courses_path, :class => 'btn'

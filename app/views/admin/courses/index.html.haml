.page-header
  %h1 Concursos
= link_to "Crear uno nuevo", new_admin_course_path, :class => 'btn btn-primary'
%table.table.table-striped
  %thead
    %tr
      %th Nombre
      %th Empieza En
      %th Termina En
      %th Creado Por
      %th Opciones
  %tbody
    - @courses.each do |course|
      %tr
        %td= link_to course.title, admin_course_path(course)
        %td= course.starts_at
        %td= course.ends_at
        %td= course.user.full_name
        %td
          = link_to "Editar", edit_admin_course_path(course), :class => 'btn btn-mini'
          = link_to "Borrar", admin_course_path(course), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

= link_to "Crear uno nuevo", new_admin_course_path, :class => 'btn btn-primary'

- model_class = Course
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= 'Imagen:'
  %br
  = image_tag @course.asset.url
%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @course.title
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @course.description
%p
  %strong= model_class.human_attribute_name(:starts_at) + ':'
  %br
  = @course.starts_at
%p
  %strong= model_class.human_attribute_name(:ends_at) + ':'
  %br
  = @course.ends_at

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), courses_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_course_path(@course), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), course_path(@course), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'

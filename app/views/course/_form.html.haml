= form_for @course, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :user_id, :class => 'control-label'
    .controls
      = f.number_field :user_id, :class => 'number_field'
  .control-group
    = f.label :title, :class => 'control-label'
    .controls
      = f.text_field :title, :class => 'text_field'
  .control-group
    = f.label :description, :class => 'control-label'
    .controls
      = f.text_area :description, :class => 'text_area'
  .control-group
    = f.label :starts_at, :class => 'control-label'
    .controls
      = f.datetime_select :starts_at, :class => 'datetime_select'
  .control-group
    = f.label :ends_at, :class => 'control-label'
    .controls
      = f.datetime_select :ends_at, :class => 'datetime_select'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), course_path, :class => 'btn'
